<h1>Listing forums</h1>

<div id="forums">
<% @forums.each do |forum| %>
  <div class="forum">
    <span class="title"><%= link_to forum.title, forum_path(forum) %></span> - 
    <span class="description"><%= forum.description%></span>
  </div>
<% end %>
</div>

<table style="display:none">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%= forum.title %></td>
    <td><%= forum.description %></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if admin? %>
<%= link_to 'New Forum', new_forum_path %>
<% end %>
